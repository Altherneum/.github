configuration {
    show-icons: true;
    transparency: "root";
    fullscreen: true;
    
    combi-modes: [ window, drun, ssh, filebrowser, recursivebrowser, run ];

    display-ssh: "‚ö°Ô∏è SSH ";
    display-run: "üìå Run ";
    display-drun: "üìå DRun ";
    display-window: "üß≠ Window ";
    display-combi: "‚ú® Combi ";
}

* {
    transparent: rgba(0,0,0,0);
    transparent-low: rgba(20,20,20,0.65);
    fg-text-selected:rgb(200, 200, 200);
    fg-text:rgb(255, 255, 255);
    border:rgba(255,255,255,0.75);

    font: "Roboto 12";

    text-color: @fg-text;

    margin: 0px;
    padding: 0px;
    spacing: 0px;
    background-color: @transparent;
    blink: false;
}

#window {
    width: 100%;
    height: 100%;

    margin: 20%;

    x-offset: 0%;
    y-offset: 0%;

    background-color: @transparent;

    border-radius: 12px;
    border: 1px;
    border-color: @border;

    children: [ "mainbox"];
    orientation: horizontal;
}

#mainbox {
    background-color: @transparent-low;
    padding: 12px;
    children: [ inputbar, message, listview, sidebar ];
}

#inputbar {
    background-color: @transparent;
    border-color: @border;

    border: 1px;
    border-radius: 6px;

    padding: 14px;
    spacing: 8px;

    children: [ "prompt","entry","num-filtered-rows","textbox-num-sep", "num-rows","case-indicator" ];
}

textbox-num-sep {
    expand: false;
    str: "/";
    text-color: @fg-text-selected;
}

#prompt {
    text-color: @fg-text;
    horizontal-align: 0;
}

#entry {
    placeholder: "  . . .";
    placeholder-color: @fg-text-selected;
    horizontal-align: 0;
}

#message {
    margin: 12px 0 0;
    border-radius: 6px;
    border-color: @border;
    background-color: @transparent;
}

#textbox {
    padding: 8px 24px;
}

#listview {
    background-color: @transparent;
    scrollbar:    true;

    margin: 12px 0 0;
    lines: 8;
    columns: 1;

    fixed-height: false;
}

#element {
    padding: 8px;
    border-radius: 6px;
    vertical-align: 0.5;
}

#element normal active {
    text-color: red;
}

#element alternate active {
    text-color: @fg-text;
}

#element selected normal, element selected active {
    border-color: @border;
    border:1px;
}

#element-icon {
    size: 25px;
    padding: 0px 10px;
    vertical-align: 0.5;
    horizontal-align: 0.5;
    margin: 0px 0px 0px 2.5%;
}

#element-text {
    padding: 6px 12px;
    text-color: inherit;
    margin: 0px 5% 0px 0px;
    horizontal-align: 0.5;
    vertical-align: 0.5;
}

#scrollbar {
    max-width: 10px;
    width: 8px ;
    margin: 0px 5px 0px 15px;
    handle-width: 6px ;
    border: 1px;
    border-color: @border;
    handle-color: @fg-text;
    border-radius: 12px;
}

#sidebar {
    border-color: @border;
    border: 1px solid 0px 0px ;
    margin: 0px 25px 0px 25px;
    padding: 25px 0px 25px 0px;
}

#button {
    text-color: @fg-text-selected;
    padding: 6px;
}

#button selected {
    border-color: @border;
    border: 1px;
    border-radius: 6px;
    text-color: @fg-text;
}