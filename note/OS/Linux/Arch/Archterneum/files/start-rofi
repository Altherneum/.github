~/.config/rofi/rofi-slurp-monitor.sh &
rofi -modi "combi,window,cmd:~/.config/rofi/run_cmd.sh,emoji,clipboard:~/.config/rofi/cliphist-rofi-img.sh,filebrowser,recursivebrowser,drun,calc,ssh,keys" -show combi -combi-modes drun,window,cmd,emoji,clipboard,ssh,filebrowser,recursivebrowser,calc,keys -kb-secondary-copy "" -kb-custom-1 Ctrl+c -theme theme -normalize-match -disable-history -click-to-exit -sidebar-mode -ssh-command 'xfce4-terminal --hide-menubar --hide-toolbar --hide-scrollbar --hold --execute {ssh-client} {host}'