rofi -modi "combi,window,cmd:~/.config/rofi/run_cmd.sh,clipboard:~/.config/rofi/cliphist-rofi-img.sh,filebrowser,recursivebrowser,drun,calc,ssh" -show combi -combi-modes drun,window,cmd,clipboard,ssh,filebrowser,recursivebrowser,calc -theme theme -normalize-match -disable-history -click-to-exit -sidebar-mode -ssh-command 'xfce4-terminal --hide-menubar --hide-toolbar --hide-scrollbar --hold --execute {ssh-client} {host}'